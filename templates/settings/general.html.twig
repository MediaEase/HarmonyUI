{% extends 'settings/base.html.twig' %}

{% block title %}General Settings - {{ app.request.server.get('SITE_NAME') }}
{% endblock %}

{% block body %}
	<div class="max-w-8xl md:mx-auto md:px-auto lg:px-6">
		<div class="xl:pt-[2.3615rem] pt-[15rem]">
			<div class="xl:pl-[25rem]">
				<div class="w-full mx-auto pt-10 xl:max-w-none xl:ml-4 rounded-xl mb-4">
					<header id="header" class="relative bg-transparent">
						<div class="px-4">
							<p class="text-left text-2xl mb-2 leading-6 font-semibold text-sky-500 dark:text-sky-400">Settings</p>
							<div class="flex items-center">
								<h1 class="inline-block text-2xl sm:text-3xl font-extrabold text-slate-900 tracking-tight dark:text-slate-200">General Settings
									<a href="https://mediaease.github.io/docs" target="_blank" rel="noopener noreferrer">
                                        <span 
                                            class="form-label-span -mt-2" 
                                            data-te-toggle="tooltip" 
                                            data-te-html="true" 
                                            data-te-ripple-init 
                                            data-te-ripple-color="light" 
                                            title="Go to documentation">
                                            {{ heroicon('arrow-top-right-on-square', class='w-4 h-4 ordinal inline-block ml-1 mb-2') }}
                                        </span>
                                    </a>
								</h1>
							</div>
						</div>
						{% if catchphrase is defined and not null %}
							<p class="mt-2 text-lg text-slate-700 dark:text-slate-400"></p>
						{% endif %}
					</header>
					<div id="content-wrapper" class="relative px-4 pt-6 prose prose-slate mt-8 dark:prose-dark pb-3 mb-4">
						{{ form_start(form) }}
						{% import '_macros/form_macros.html.twig' as form_label_macro %}
						<div class="flex flex-wrap -mx-3 xl:py-2">
							<div class="w-full xl:w-1/2 px-3 xl:mb-6 md:mb-0 pt-2 xl:p-0">
								{{ form_label_macro.label_with_icon(form, 'siteName') }}
								{{ form_widget(form.siteName, {'attr': {'class': 'form-widget'}}) }}
								{{ form_label_macro.form_error_stylized(form, 'siteName') }}
							</div>
							<div class="w-full xl:w-1/2 px-3 xl:mb-6 md:mb-0 pt-2 xl:p-0">
								{{ form_label_macro.label_with_icon(form, 'siteDescription') }}
								{{ form_widget(form.siteDescription, {'attr': {'class': 'form-widget'}}) }}
								{{ form_label_macro.form_error_stylized(form, 'siteDescription') }}
							</div>
                        </div>
						<div class="flex flex-wrap -mx-3 xl:py-2">
							<div class="w-full xl:w-1/2 px-3 xl:mb-6 md:mb-0 pt-2 xl:p-0">
								{{ form_label_macro.label_with_icon(form, 'rootUrl') }}
								{{ form_widget(form.rootUrl, {'attr': {'class': 'form-widget'}}) }}
								{{ form_label_macro.form_error_stylized(form, 'rootUrl') }}
							</div>
							<div class="w-full xl:w-1/2 px-3 xl:mb-6 md:mb-0 pt-2 xl:p-0">
								{{ form_label_macro.label_with_icon(form, 'netInterface') }}
								{{ form_widget(form.netInterface, {'attr': {'class': 'form-widget'}}) }}
								{{ form_label_macro.form_error_stylized(form, 'netInterface') }}
							</div>
                        </div>
						{# <div class="flex flex-wrap -mx-3 xl:mb-6 ">
							<div class="w-full xl:w-1/2 px-3 xl:mb-6 md:mb-0 pt-2 xl:p-0">
								{{ form_label_macro.label_with_icon(form, 'mountPoint') }}
								{{ form_widget(form.mountPoint, {'attr': {'class': 'form-widget'}}) }}
								{{ form_label_macro.form_error_stylized(form, 'mountPoint') }}
							</div>
						</div> #}
						<div class="flex justify-end pt-3 mt-4 mb-2 xl:m-0 xl:p-0">
							<button class="iconed-button bg-green-500 hover:bg-green-700 text-white font-bold pl-3 rounded h-14 pr-[1.25rem]">
								{{ heroicon(form.save.vars.icon_before, 'icon ' ~ form.save.vars.icon_class)|raw }}{{ form.save.vars.label }}
							</button>
						</div>
						{{ form_row(form._token) }}
						{{ form_end(form, {'render_rest': false}) }}
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
